PROJECT = Reverb.exe
OBJFILES = Reverb.obj ..\RIFFFile.obj ..\WAVE.obj
RESFILES =
RESDEPEN = $(RESFILES)
LIBFILES =
LIBRARIES = 
SPARELIBS = 
PACKAGES = vclx35.bpi VCL35.bpi vcldb35.bpi vcldbx35.bpi bcbsmp35.bpi dclocx35.bpi \
  Qrpt35.bpi New.bpi
DEFFILE =
# ---------------------------------------------------------------------------
PATHCPP = .;..
PATHASM = .;
PATHPAS = .;
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
# ---------------------------------------------------------------------------
CFLAG1 = -Od -w -r- -k -y -v -vi- -c -tWC
CFLAG2 = -I..\..\cpp;$(BCB)\include;.. -D_NO_VCL
CFLAG3 = -Tkh30000
PFLAGS = -U..\..\cpp;$(BCB)\lib;$(DEBUGLIBPATH) -I..\..\cpp;$(BCB)\include;.. -D_NO_VCL \
  -$Y -$W -$O- -v -JPHN -M
RFLAGS = -i..\..\cpp;$(BCB)\include;.. -D_NO_VCL
AFLAGS = /i$(BCB)\include /i.. /d_NO_VCL /mx /w2 /zd
LFLAGS = -L..\..\cpp;$(BCB)\lib;$(DEBUGLIBPATH) -ap -Tpe -x -Gn -v
IFLAGS =
# ---------------------------------------------------------------------------
ALLOBJ = c0x32.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES)  import32.lib cw32mt.lib
